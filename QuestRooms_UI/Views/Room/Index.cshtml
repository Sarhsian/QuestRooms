@model List<QuestRooms.BLL.Services.DtoModels.RoomDto>
<!DOCTYPE html>


<div class="row">
        @foreach (var room in Model)
        {
        <div class="col-xl-3 col-lg-4 col-md-6 col-12">
            <div class="card">
                <div class="card-img-top">
                    <img class="img-fluid" src="https://www.meme-arsenal.com/memes/68d1ed4e5a3230367a738a61c0c66de3.jpg" />
                </div>
                <div class="card-header">
                        @room.Name
                </div>
                <div class="card-body">
                    <div class="card-text">
                        @room.Description
                    </div>
                    <div class="card-text">
                        @room.Rating
                    </div>
                </div>
                <div class="card-footer">
                    <button>
                        Buy
                    </button>                
                        
                </div>
            </div>
        </div>
        }


</div>

